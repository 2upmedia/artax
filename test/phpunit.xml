<phpunit bootstrap="../vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="Unit-Tests">
            <directory>./unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory>../src/Artax</directory>
            <exclude>
                <file>../src/Artax/Negotiation/Terms/MultipartTerm.php</file>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log
            type="coverage-html"
            target="./coverage"
            charset="UTF-8"
            yui="true"
            lowUpperBound="35"
            highLowerBound="70"
            showUncoveredFiles="true"
        />
        <!--
        <log
            type="coverage-text"
            target="php://stdout"
            lowUpperBound="35"
            highLowerBound="70"
        />
        -->
    </logging>
</phpunit>
